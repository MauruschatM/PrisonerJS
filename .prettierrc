{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": false,
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"endOfLine": "lf",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"jsxSingleQuote": false,
	"quoteProps": "as-needed",
	"proseWrap": "preserve",
	"htmlWhitespaceSensitivity": "css",
	"embeddedLanguageFormatting": "auto",
	"overrides": [
		{
			"files": ["*.json", "*.jsonc"],
			"options": {
				"printWidth": 120
			}
		},
		{
			"files": ["*.md", "*.mdx"],
			"options": {
				"printWidth": 100,
				"proseWrap": "always"
			}
		},
		{
			"files": ["*.tsx", "*.jsx"],
			"options": {
				"printWidth": 110,
				"bracketSameLine": true,
				"jsxBracketSameLine": true
			}
		},
		{
			"files": ["*.config.{js,ts,cjs,mjs}", "*.setup.{js,ts}"],
			"options": {
				"printWidth": 120,
				"tabWidth": 2
			}
		}
	]
}
